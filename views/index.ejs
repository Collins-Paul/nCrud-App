    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5 text-danger" id="staticBackdropLabel">Delete</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body text-center">
              <h5>Are you sure you want to delete this user?</h5>
          </div>
          <div class="modal-footer">
            <form action="">
              <input type="hidden" class="delete-value">
              <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Decline</button>
              <button type="button" class="btn btn-success">Confirm</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
        $(document).ready(function () {
            function confirmModal(elementId) {
              $('.delete-value').val(elementId);
              $('#staticBackdrop').modal('show');
            }

            $('.delete').click(function (e) { 
              e.preventDefault();
                var id = $(this).attr('id');
                confirmModal(id);
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
