<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <style>
        .user-dp {
            height: 18rem;
            width: 100;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
  </head>
  <body>
    <%- include('includes/header'); %>
      <main>
        <div class="container mt-3">
            <div class="row">
                <div class="col-lg-4 text-center">
                    <div class="user-dp" style="background-image: url('images/profile-icon-9.png');"></div>
                    <p class="fw-bold fs-2 bg-dark text-white py-2">Paul Collins N.</p>
                    <div class="d-flex justify-content-center gap-3 mb-3">
                        <a href="" class="text-dark"><span class="fa fa-facebook fs-4"></span></a>
                        <a href="" class="text-dark"><span class="fa fa-instagram fs-4"></span></a>
                        <a href="" class="text-dark"><span class="fa fa-linkedin fs-4"></span></a>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="">
                        <div class="bg-dark text-white p-2 fs-4">Personal Information</div>
                        <div class="fs-4 my-3">
                            <div class="d-flex justify-content-between">
                                <p>Firstname:</p>
                                <p class="fw-bold">Paul</p>
                            </div>

                            <div class="d-flex justify-content-between">
                                <p>Lastname:</p>
                                <p class="fw-bold">Collins</p>
                            </div>

                            <div class="d-flex justify-content-between">
                                <p>Phone:</p>
                                <p class="fw-bold">09137465096</p>
                            </div>

                            <div class="d-flex flex-column flex-lg-row justify-content-between">
                                <p>Email Address:</p>
                                <p class="fw-bold">agogocollins80@gmail.com</p>
                            </div>

                            <div class="d-flex flex-column flex-lg-row justify-content-between">
                                <p>Course/Program:</p>
                                <p class="fw-bold">Web Development (3 months)</p>
                            </div>
                        </div>

                        <hr>

                        <div class="row row-gap-3 mb-5">
                            <div class="col-6 col-lg-4">
                                <button class="btn btn-light border d-block"><span class="fa fa-camera"></span> Change Photo</button>
                            </div>
                            <div class="col-6 col-lg-4">
                                <a href="" class="btn btn-success d-block edit-d-user"><span class="fa fa-edit"></span> Edit Profile</a>
                            </div>
                            <div class="col-12 col-lg-4">
                                <a href="" class="btn btn-secondary d-block password-reset"><span class="fa fa-lock"></span> Reset Password</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </main>
    <!-- <%- include('includes/footer'); %> -->

    <div class="modal fade" id="edit" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel"><span class="fa fa-user"></span> Edit Profile</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="">
                    <div class="p-2 text-white bg-dark mb-3">- Personal Information</div>
                    <div class="row">
                        <div class="mb-3 col-lg-6">
                            <input type="text" class="form-control" placeholder="Firstname">
                        </div>
                        <div class="mb-3 col-lg-6">
                            <input type="text" class="form-control" placeholder="Lastname">
                        </div>
                        <div class="mb-3 col-lg-6">
                            <input type="text" class="form-control" placeholder="Phone">
                        </div>
                        <div class="mb-3 col-lg-6">
                            <input type="email" class="form-control" placeholder="Email address">
                        </div>
                    </div>
                    <div class="p-2 text-white bg-dark mb-3">- Social Handles</div>
                    <div class="row">
                        <div class="mb-3 col-lg-4">
                            <label for="" class="mb-2"><span class="fa fa-facebook"></span> Facebook</label>
                            <input type="text" class="form-control" placeholder="Facebook">
                        </div>
                        <div class="mb-3 col-lg-4">
                            <label for="" class="mb-2"><span class="fa fa-instagram"></span> Instagram</label>
                            <input type="text" class="form-control" placeholder="Instagram">
                        </div>
                        <div class="mb-3 col-lg-4">
                            <label for="" class="mb-2"><span class="fa fa-linkedin"></span> LinkedIn</label>
                            <input type="text" class="form-control" placeholder="LinkedIn">
                        </div>
                    </div>

                    <div class="my-3">
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success"><span class="fa fa-check"></span> Save Changes</button>
                        </div>
                    </div>
                </form>
            </div>
          </div>
        </div>
    </div>

    <div class="modal fade" id="reset-password" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="staticBackdropLabel"><span class="fa fa-lock"></span> Reset Password</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="">
                    <div class="row">
                        <div class="mb-3 col-lg-12">
                            <input type="password" class="form-control" placeholder="Current Password">
                        </div>
                        <div class="mb-3 col-lg-12">
                            <input type="password" class="form-control" placeholder="New Password">
                        </div>
                        <div class="mb-3 col-lg-12">
                            <input type="password" class="form-control" placeholder="Confirm New Password">
                        </div>
                    </div>

                    <div class="my-3">
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success">Proceed</button>
                        </div>
                    </div>
                </form>
            </div>
          </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
           $('.edit-d-user').click(function (e) { 
            e.preventDefault();
                $('#edit').modal('show');
           });

           $('.password-reset').click(function (e) { 
            e.preventDefault();
                $('#reset-password').modal('show');
           });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>